{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "start-wrangler-debug",
			"type": "shell",
			"command": "npx",
			"args": [
				"wrangler",
				"dev",
				"--inspector-port",
				"9229",
				"--local-protocol",
				"http"
			],
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*",
					"endsPattern": "Ready on.*"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		}
	]
}

